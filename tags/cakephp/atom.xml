&lt;td style=&#34;vertical-align:top;padding:0;margin:0;border:0;;width:100%&#34;&gt;
&lt;pre style=&#34;background-color:#f0f3f3;-moz-tab-size:2;-o-tab-size:2;tab-size:2&#34;&gt;&lt;code class=&#34;language-php&#34; data-lang=&#34;php&#34;&gt;$this-&amp;gt;Widget-&amp;gt;updateAll(
    array(&amp;#39;Widget.numberfield&amp;#39; =&amp;gt; &amp;#39;Widget.numberfield + 1&amp;#39;),
    array(&amp;#39;Widget.id&amp;#39; =&amp;gt; 1)
